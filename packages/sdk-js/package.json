{
  "name": "@productdrivers/sdk-js",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript SDK for ProductDrivers analytics",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@productdrivers/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "eslint": "^9.39.1",
    "react": "^18.3.1",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  }
}


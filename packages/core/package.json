{
  "name": "@productdrivers/core",
  "version": "1.0.0",
  "description": "Shared types and contracts for ProductDrivers",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "eslint": "^9.39.1",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  }
}

